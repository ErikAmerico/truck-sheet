generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model employee {
  id        Int    @id @default(autoincrement())
  role      String
  username  String @unique
  password  String
  firstName String
  lastName  String
  trucksheet trucksheet[]
}

model truck {
  id          Int    @id @default(autoincrement())
  number     Int @unique
  trucksheet  trucksheet[]
}

model trucksheet {
  id          Int    @id @default(autoincrement())
  employeeId  Int
  employee    employee @relation(fields: [employeeId], references: [id])
  truckId     Int
  truck       truck  @relation(fields: [truckId], references: [id])
  date        DateTime
  aircompressor  Boolean? @default(false)
  airlines      Boolean? @default(false)
  battery       Boolean? @default(false)
  brakeaccessories  Boolean? @default(false)
  brakes  Boolean? @default(false)
  carburetor  Boolean? @default(false)
  clutch  Boolean? @default(false)
  defroster  Boolean? @default(false)
  driveline  Boolean? @default(false)
  engine  Boolean? @default(false) 
  fueltanks Boolean? @default(false)
  heater  Boolean? @default(false)
  horn  Boolean? @default(false)
  lights  Boolean? @default(false)
  mirrors  Boolean? @default(false)
  muffler  Boolean? @default(false)
  oilpressure  Boolean? @default(false)
  onboardrecorder  Boolean? @default(false)
  radiator  Boolean? @default(false)
  rearend  Boolean? @default(false)
  reflectors  Boolean? @default(false)
  safetyequipment  Boolean? @default(false)
  springs  Boolean? @default(false)
  starter  Boolean? @default(false)
  steering  Boolean? @default(false)
  tachograph  Boolean? @default(false)
  tires  Boolean? @default(false)
  transmission  Boolean? @default(false)
  wheels  Boolean? @default(false)
  windows  Boolean? @default(false)
  windshieldwipers  Boolean? @default(false)
  other  Boolean? @default(false)
  fuel Int
  mileage Int
  furniturepads Boolean? @default(false)
  burlapskins Boolean? @default(false)
  humpstraps Boolean? @default(false)
  estraps Boolean? @default(false)
  bucklestraps Boolean? @default(false)
  doorstops Boolean? @default(false)
  blocks Boolean? @default(false)
  fireextinguisher Boolean? @default(false)
  setofreflectors Boolean? @default(false)
  setofjumpercables Boolean? @default(false)
  bigred Boolean? @default(false)
  steelplate Boolean? @default(false)
  diamondplate Boolean? @default(false)
  rubberbands Boolean? @default(false)
  remarks String?
  trashremove Boolean? @default(false)
  conditionsatisfactory Boolean? @default(false)
  defectscorrected Boolean? @default(false)
  defectsneednocorrection Boolean? @default(false)
}